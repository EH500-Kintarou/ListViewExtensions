<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp3.1;net6.0-windows</TargetFrameworks>
    <LangVersion>12</LangVersion>
	<UseWPF>true</UseWPF>
    <Title>ListView Extensions</Title>
    <Description>The library which supports the implementation of the MVVM pattern in WPF ListView.</Description>
	<Copyright>Copyright Â© 2014-2024 EH500_Kintarou</Copyright>
	<Company>EH500_Kintarou</Company>
	<Authors>EH500_Kintarou</Authors>
	<VersionPrefix>1.0.1</VersionPrefix>
	<VersionSuffix></VersionSuffix>
	<RepositoryUrl>https://github.com/EH500-Kintarou/ListViewExtensions</RepositoryUrl>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	<Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Themes\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>